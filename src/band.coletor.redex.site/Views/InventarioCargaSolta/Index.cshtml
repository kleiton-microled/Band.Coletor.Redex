@{
    ViewBag.Title = "Inventario Carga Solta";
}

<div>
    <div class="row padding-bottom">
        <div class="col-md-12">
            <h4>
                <i class="fas fa-truck fa-lg"></i>
                Inventario Carga Solta
            </h4>
        </div>
    </div>
    <!--FORM-->
    <form method="post" action="@Url.Action("Buscar", "InventarioCargaSolta")">
        <div class="row padding-bottom">
            <div class="form-group col-md-6">
                <label for="marcante">MARCANTE</label>
                <input type="text" class="form-control" id="marcante" name="marcante">
            </div>
            <div class="form-group col-md-6">
                <label for="local">LOCAL</label>
                <input type="text" class="form-control" id="local" name="local">
            </div>
        </div>

        <div class="row padding-bottom">
            <div class="form-group col-sm-4">
                <label for="cbArm">Selecione ARM: </label>
                <select id="cbArm" class="form-control">
                    @*@foreach (var item in Model)
                        {
                            <option value="@item.Id">@item.Descricao</option>
                        }*@
                </select>
            </div>
            <div class="form-group col-md-8">
                <label for="localPos">LOCAL POS</label>
                <input type="text" class="form-control" id="localPos" name="localPos">
            </div>
        </div>
    </form>
</div>

<!-- Footer com botões -->
<footer class="fixed-bottom bg-light py-3">
    <div class="container d-flex justify-content-start">
        <a id="lnkHome" href="@Url.Content("~/Home")" class="btn btn-warning mx-1">
            <span aria-hidden="true" class="fa fa-home"></span>&nbsp;&nbsp;Home
        </a>

        <a id="lnkGravar" href="#" class="btn btn-warning mx-1">
            <span aria-hidden="true" class="fa fa-save"></span>&nbsp;&nbsp;Gravar
        </a>
    </div>
</footer>