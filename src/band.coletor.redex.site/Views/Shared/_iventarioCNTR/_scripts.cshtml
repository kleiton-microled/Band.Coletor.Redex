<script>
    $('#txtYard').change(function () {
        var yard = $(this).val();
        var countMotivos = $('#cbMotivos').val();

        if (yard != "") {

            if (yard == "SAIDA" || yard == "TREM") {
                $('#cbMotivo').val(8)
            }
            else if (yard) {
                $('#cbMotivo').val(6);
            }
            else if (yard != "" && yardAtual == "") {
                if (countMotivos >= 12) {
                    $("#cbMotivo").val(12);
                }
            }
            else if (yard != "" && yardAtual != "") {
                $('#cbMotivo').val(1);
            }
            else {
                $.ajax({
                    url: '@Url.Content("~/IventarioCTNR/GetBuscaByYard")',
                    type: 'GET',
                    data: { yard: yard },

                    beforeSend: function () {
                        $('#preloader').show();
                    },

                    success: function (Dados) {
                        var countYard = Dados.objetoRetorno.COUNT_YARD;

                        if (countYard > 0) {
                            $('#cbMotivo').val(33);
                        }
                        $('#preloader').hide();
                    },
                    error: function () {
                       $('#preloader').hide();
                       toast.error('Erro ao carregar dados', 'Erro');
                    }
                });
            }
        }
    });
</script>

