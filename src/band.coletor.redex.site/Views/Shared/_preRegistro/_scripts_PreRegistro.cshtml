        $.fn.addLeadingZeros = function (length) {
              for(var el of this){
                _value = el.value.replace(/^0+/,'');
                length = length - _value.length;
                if(length > 0){
                  while (length--) _value = '0' + _value;
                }
                el.value = _value;
              }
                };

